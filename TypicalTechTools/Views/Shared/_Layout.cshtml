<!DOCTYPE html>
<html lang="en">
        @using Microsoft.AspNetCore.Http;
@{
    // Gets the value of the IsAuthentication value from the session data.
    string Authenticated = Context.Session.GetString("IsAuthenticated") ?? "False";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TypicalTechTools</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TypicalTechTools.styles.css" asp-append-version="true" />
</head>
<body style="background-color:lightblue">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">TypicalTechTools</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Warranty" asp-action="Index">Warranties</a>
                        </li>
                    </ul>
                </div>
                <div>
                                       @{
                        // determine which button show based upon whether the user is Authenticated or not
                        if (Authenticated.Equals("true"))
                            {
                            <a class="btn btn-primary mx-1" asp-controller="Product" asp-action="Create">Add Product</a>
                            <a class="btn btn-primary mx-1" asp-controller="Admin" asp-action="CreateUser">Add User</a>
                            <a class="btn btn-danger mx-1" asp-controller="Admin" asp-action="LogOff">Log Off</a>
                            }
                        else
                            {

                            <a class="btn btn-success mx-1" asp-controller="Admin" asp-action="Login">Login</a>
                            }
                    }
                    <!--  <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Login">Login</a>-->
                </div>
            </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TypicalTechTools - <a asp-controller="Product" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
